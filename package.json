{
  "name": "todo-web",
  "version": "1.0.0",
  "description": "Simple todo web app with Express and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "concurrently \"npm run build:watch\" \"npm run dev\"",
    "build:watch": "tsc --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.0"
  }
}
